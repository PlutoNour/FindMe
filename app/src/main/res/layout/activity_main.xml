<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout android:id="@+id/line1" android:layout_width="match_parent" android:layout_height="100dp" android:orientation="horizontal" android:weightSum="3">
        <Button android:id="@+id/btn1" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1" android:text="1" />

    </LinearLayout>
    <LinearLayout android:id="@+id/line2" android:layout_width="match_parent" android:layout_height="100dp" android:orientation="horizontal" android:weightSum="3" android:layout_below="@+id/line1">

        <Button
            android:id="@+id/btn2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="2" />
    </LinearLayout>
    <LinearLayout android:id="@+id/line3" android:layout_width="match_parent" android:layout_height="100dp" android:orientation="horizontal" android:weightSum="3" android:layout_below="@+id/line2">

        <Button
            android:id="@+id/btn3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="3" />
    </LinearLayout>

</RelativeLayout>
