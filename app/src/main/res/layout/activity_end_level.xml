<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:padding="20dp" android:layout_centerInParent="true">

        <TextView android:id="@+id/txt" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerHorizontal="true" android:textColor="#000000" android:textSize="21sp" android:text="bravo" />
        <TextView android:id="@+id/txt_score" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/txt" android:layout_marginTop="20dp" android:layout_centerHorizontal="true" android:textColor="#000000" android:textSize="36sp" android:text="30" />

        <Button android:id="@+id/btn" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/txt_score" android:layout_marginTop="50dp" android:layout_centerHorizontal="true" android:text="Next Level"/>

    </RelativeLayout>

</RelativeLayout>